
pipeline {
    agent any
environment {
    def kubeConfig="C:\\ProgramData\\Jenkins\\.jenkins\\.kube\\config"
}
    stages {
        stage('Hello') {
            steps {
                script{
                    git branch: 'main',
                    url: 'https://github.com/MayarAbdelaziz/jenkins.git'
                    sh 'cd app && docker build -t mayaaribrahim/jenkinsnodeapp . && docker push mayaaribrahim/jenkinsnodeapp '
                    
                    sh "cd deployment && kubectl apply -f nodejs-ingress.yaml,nodejs.yaml,nodesvc.yaml --kubeconfig=$kubeConfig"
                }
            }
        }
    }
}
